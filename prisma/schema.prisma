// prisma bana node.js içinde kullanacağım bir client üret.
generator client {
  provider = "prisma-client-js"
}

//"Hangi veritabanına bağlanacağım?"
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Database’de User adında şöyle bir tablo olacak:
//id                createdAt	               updatedAt
model User {
  id Int @id @default(autoincrement()) //Yeni kayıt eklenince id otomatik artsın.
  createdAt DateTime @default(now()) //Kayıt oluşturulunca tarih otomatik olarak şu an olsun.
  updatedAt DateTime @updatedAt //Kayıt her güncellendiğinde bu alan otomatik değişir.

  email String
  hash String

  firstName String?// ? means optional (nullable)
  lastName String?
}

//" Bookmark " " " " ":
model Bookmark {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  description String?
  link String
}